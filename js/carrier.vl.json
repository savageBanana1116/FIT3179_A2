{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/savageBanana1116/FIT3179_A2/main/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "concat": [
    {
      "width": 1000,
      "height": 500,
      "projection": {"type": "equirectangular"},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/savageBanana1116/FIT3179_A2/main/js/ne_110m_admin_0_countries.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {
            "type": "geoshape",
            "fill": "#9b9999",
            "stroke": "white",
            "strokeWidth": 1
          },
          "encoding": {"tooltip": {"field": "note"}}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/savageBanana1116/FIT3179_A2/main/js/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "#298beefb", "opacity": 0.2}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/savageBanana1116/FIT3179_A2/main/js/ne_110m_admin_0_countries.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {"type": "geoshape", "stroke": "gray"},
          "params": [
            {"name": "country_selection", "select": {"type": "point"}}
          ],
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/savageBanana1116/FIT3179_A2/main/data/carrier.csv"
                },
                "key": "Country",
                "fields": ["number"]
              }
            }
          ],
          "encoding": {
            "color": {
              "field": "number",
              "type": "quantitative",
              "scale": {"domain": [0, 20], "scheme": "oranges"},
              "legend": {"title": "Number of aircraft Carrier"}
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "number",
                "title": "Total number of aircraft Carrier",
                "type": "quantitative",
                "format": ","
              }
            ]
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/savageBanana1116/FIT3179_A2/main/js/WorldMapWithGraticules.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "#a3aeb9ee"}
        }
      ]
    }
  ],
  "config": {}
}